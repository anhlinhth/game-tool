function saveAll(){	
	$("#dialog #ct").html("");				
	
	quest_id = $("#QuestID").val();
	s = $("form#form").serialize();
	$.ajax({
			type: "POST",
			url:"<?php echo $this->baseUrl.'/quest/save/'?> ",
			data: s,	
			success: function(msg){		
				if(parseInt(msg)==1){
				
					$("#dialog #ct").append("<p class='msg'>Update Quest Success<p>");
					saveTask();
					$("#dialog").dialog("open");
					
				}else{
					$("#dialog #ct").append("<p class='error'>Failed:<br>"+msg+"<p>");				
					$("#dialog").dialog("open");			
				}
				
			}
	});	
}
function saveTask(){
	var key = 0;
	$(".task").each(function (index){		
		
		data = $(".form-task-"+ index).serialize();		
		$.ajax({
			type: "POST",
			url:"<?php echo $this->baseUrl.'/task/save/'?> ",
			data: data + "&QuestID=" + quest_id,	
			success: function(msg){	
				//alert(data);
				//alert(msg);
				key = key+ 1;
				if(parseInt(msg)==1){
					$("#dialog #ft").before("<p class='success'>Task "+ key +":Success<p>");
				}else{					
					$("#dialog #ft").before("<p class='error'>Task " + key + ":	<br>"+ msg + "</p>");					
				}	
				
			}
		});
	
	});
}
