function loadTask(key){	
	$.ajax({
		type: "POST",
		url:"<?php echo $this->baseUrl.'/quest/listtask/'?> ",
		data: "id=" + key,	
		success: function(data){		
			if(data != ""){ 				
				$("#list-task").html(data);
				$(".add-target").click(function(){
					addTarget(this);
					return false;
				});
				$("input[name=target]").change(function(){
					targetChange(this);
				});
			}else{
				alert("Error");				
			}
			
		}
	});
	
}
